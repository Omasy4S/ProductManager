@model TestEntityFrameworkProject.Models.Product
@{
    ViewData["Title"] = "Добавить продукт";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <!-- Заголовок -->
        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="mb-0">
                <i class="bi bi-plus-circle text-success me-2"></i>Добавить новый продукт
            </h2>
        </div>

        <!-- Карточка с формой -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <form asp-action="Create">
                    @Html.AntiForgeryToken()
                    
                    <!-- Название -->
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-semibold">
                            <i class="bi bi-tag text-primary me-2"></i>Название продукта
                        </label>
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Введите название..." />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    
                    <!-- Описание -->
                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-semibold">
                            <i class="bi bi-file-text text-info me-2"></i>Описание
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Опишите продукт..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    
                    <!-- Цена -->
                    <div class="mb-4">
                        <label asp-for="Price" class="form-label fw-semibold">
                            <i class="bi bi-currency-dollar text-success me-2"></i>Цена
                        </label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text">₽</span>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <!-- Кнопки -->
                    <div class="d-flex gap-2 justify-content-end mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-x-lg me-2"></i>Отмена
                        </a>
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-check-lg me-2"></i>Сохранить
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}